/*
 * Import nib
 * font-family: "Mouse Memoirs";
 */
@import 'nib'

/*
 * Grab a custom font from Google
 */
@import url('http://fonts.googleapis.com/css?family=Quicksand')

/*
 * Nib provides a CSS reset
 */
global-reset()

/*
 * Store the main color and
 * background color as variables
 */
main-color = #8DC7BB
background-color = #faf9f0

body
  font-family 'Georgia'
  background-color background-color
  color #444

header
  font-family 'Quicksand'
  padding 50px 10px
  color #fff
  font-size 25px
  text-align center

  /*
   * Note the use of the `main-color`
   * variable and the `darken` function
   */
  background-color main-color
  border-bottom 1px solid darken(main-color, 30%)
  text-shadow 0px -1px 0px darken(main-color, 30%)

.container
  width 700px
  margin 50px auto

h6
  width 35px
  height 50px
  border-radius 3px
  float left
  margin-left 10px
  border 1px solid #ccc
  background-color #504A4B
  box-shadow inset 0px 0px 0px 3px rgba(#fff, 0.8), 0px 3px 0px -2px rgba(#000, 0.1)


  input
    float left
    height 40px
    margin-top 5px

  p
    float left
    margin-left 13.5px
    margin-top -30px
    font-family 'Quicksand'
    font-size 15px
    color #FFFFFF

.main-content
  float left
  width 500px

  p
    margin-bottom 20px

.sidebar
  width 200px
  margin-left 250px

  .widget

    /*
     * Note the lack of vendor
     * prefixes here. Nib will
     * add them for us
     */
    border-radius 3px
    border 1px solid #ccc
    background-color background-color
    box-shadow inset 0px 0px 0px 3px rgba(#fff, 0.8), 0px 3px 0px -2px rgba(#000, 0.1)

    h2
      font-family 'Quicksand'
      margin-top 90px
      margin-left 70px
      height 150px

    p
      font-size 13px
      padding 0px 10px
      margin-bottom 10px

h3
  float left